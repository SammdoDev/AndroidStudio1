<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".kalkulator_tombol"
    android:background="@color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_kalkulator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalkulator"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <EditText
        android:id="@+id/display"
        android:layout_width="378dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded"
        android:gravity="end"
        android:hint="-"
        android:padding="16dp"
        android:textColor="#000000"
        android:textColorHint="@color/black"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
        android:id="@+id/tombol_clear"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="10dp"
        android:backgroundTint="#1E90FF"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="C"
            android:textSize="25dp"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_backspace"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="#1E90FF"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="โซ"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btPlusMinus"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="#DCDCDC"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+/-"
                android:textSize="30dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_kali"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="#DCDCDC"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="x"
                android:textSize="30dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_tujuh"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="7"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_delapan"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="8"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_sembilan"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="9"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_bagi"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="#DCDCDC"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="รท"
                android:textSize="35dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_empat"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_lima"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_enam"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="6"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_tambah"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="#DCDCDC"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textSize="30dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_satu"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_dua"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_tiga"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="3"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_kurang"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="#DCDCDC"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-"
                android:textSize="50dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/percent"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="#DCDCDC"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="%"
                android:textSize="30dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_nol"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textSize="25dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_koma"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="."
                android:textSize="35dp"
                android:textColor="#000000" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tombol_sama_dengan"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:backgroundTint="#1E90FF"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="="
                android:textSize="35dp"
                android:textColor="#fff" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
