<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".form">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@drawable/curved_background">

        <ImageView
            android:id="@+id/back_form"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_back"
            android:layout_gravity="start" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smkn6logo"
        android:layout_gravity="center"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="start">

        <TextView
            android:id="@+id/tv_formulir_pendaftaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="FORMULIR PENDAFTARAN"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_siswa_smkn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="SISWA SMKN 6 SURAKARTA"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
</LinearLayout>

    </LinearLayout>


<androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/white"
        android:translationX="20dp"
        android:translationY="-30dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="650dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/sudut_tumpul"
                    android:hint="Masukkan Nama"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6A5151" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/sudut_tumpul"
                    android:hint="Masukkan Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6A5151" />
            </LinearLayout>

            <!-- Second Row with Phone Number and Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/sudut_tumpul"
                    android:hint="Masukkan Nomor Telepon"
                    android:inputType="textPhonetic"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6A5151" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:background="@drawable/sudut_tumpul"
                        android:text="Laki-Laki" />

                    <RadioButton
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="70dp"
                        android:background="@drawable/sudut_tumpul"
                        android:text="Perempuan" />
                </RadioGroup>
            </LinearLayout>

            <!-- Third Row with Spinner and Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="400dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:entries="@array/jurusan"
                    android:background="@drawable/spinner_background"
                    android:textColor="@color/black"
                    android:layout_marginEnd="20dp"/>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Simpan Data"
                    android:backgroundTint="#6200EE"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
