<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".activity_profile"
    android:background="@color/white">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/curved_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/back_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/akun"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_akun"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:background="@drawable/circle"
            android:clipToOutline="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samuel Dody Purnama"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Full Stack Developer, Mobile App Developer \nMachine Learning Engineer, UX/UI Designer, Game Developer."
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#B4A5A5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:backgroundTint="#00000000"
            android:text="Indonesia"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#4B4343"
            />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/border"
                android:backgroundTint="#00000000"
                android:text="SMKN 6 SKA"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#4B4343"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:text="Message"
                android:backgroundTint="#332E2E"
                android:textColor="@color/white"/>

            <ImageButton
                android:id="@+id/instagram"
                android:layout_marginStart="10dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/instagram"
                android:background="@drawable/circle"
                android:backgroundTint="#332E2E"
                android:clipToOutline="true"
                android:contentDescription="Icon Button"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <ImageButton
                android:id="@+id/twitter"
                android:layout_marginStart="10dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/twitter"
                android:background="@drawable/circle"
                android:backgroundTint="#332E2E"
                android:clipToOutline="true"
                android:contentDescription="Icon Button"
                android:padding="18dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>



        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/profile"
        android:layout_width="350dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="110dp"
        android:backgroundTint="#242020">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Profile"
            android:gravity="center"
            android:background="#C72020"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soft Skill"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="Communication, Teamwork, Problem Solving, Time Management, Leadership, Creativity"
                    android:textColor="#B4A5A5"
                    android:textSize="12sp"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Name: \nAge: \nGender: \nMajor: \nSchool:"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Samuel Dody\n16 \nMale \nPPLG: \nSMKN 6 SKA"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#E6DFDF" />
        </LinearLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/share"
        android:layout_width="170dp"
        android:layout_height="50dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="#242020"
        android:layout_marginStart="190dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/share"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Profile"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/setting"
        android:layout_width="170dp"
        android:layout_height="50dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintStart_toEndOf="@id/share"
        android:layout_marginTop="20dp"
        android:backgroundTint="#242020"
        android:layout_marginStart="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/settings"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
